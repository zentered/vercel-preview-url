{
  "name": "vercel-preview-url",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action to receive the deployment preview from Vercel",
  "keywords": [
    "vercel",
    "deployment",
    "github",
    "action"
  ],
  "homepage": "https://github.com/zentered/vercel-preview-url#readme",
  "bugs": {
    "url": "https://github.com/zentered/vercel-preview-url/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zentered/vercel-preview-url.git"
  },
  "license": "MIT",
  "author": "Zentered <hi@zentered.co> (https://zentered.co)",
  "contributors": [
    "Patrick Heneise (https://github.com/zentered)"
  ],
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint . --ext .js --ext .md",
    "build": "ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test": "vitest run"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{mjs,js,json,md}": [
      "prettier --write"
    ],
    "*.{mjs,js}": [
      "eslint --cache --fix"
    ]
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "axios": "^1.1.3",
    "is-ci": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.2.0",
    "@vercel/ncc": "^0.34.0",
    "commitlint": "^17.2.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.2",
    "prettier": "^2.7.1",
    "vitest": "^0.25.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
